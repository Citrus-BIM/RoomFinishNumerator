<Window x:Class="RoomFinishNumerator.RoomFinishNumeratorWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"

        Title="Нумератор отделки"
        Height="380" Width="380"
        MinHeight="380" MinWidth="380"
        MaxHeight="380" MaxWidth="380"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/RoomFinishNumerator;component/Resources/citrus.ico"
        WindowStartupLocation="CenterScreen"
        KeyDown="RoomFinishNumeratorWPF_KeyDown"

        FontFamily="{DynamicResource BaseFont}"
        FontSize="{DynamicResource FontSizeBase}"
        Foreground="{DynamicResource TextBrush}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        TextOptions.TextHintingMode="Fixed"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Language="ru-RU">

    <!-- Citrus theme -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- замени assembly/путь при необходимости -->
                <ResourceDictionary Source="/RoomFinishNumerator;component/CitrusTheme/CitrusTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===================== CONTENT ===================== -->
        <StackPanel Grid.Row="0" Margin="0,10,0,0">

            <!-- НУМЕРАЦИЯ -->
            <GroupBox x:Name="groupBox_RoomFinishNumbering"
                      Header="Нумерация отделки:"
                      Margin="0,0,0,10">
                <StackPanel Margin="8,6,8,8">
                    <RadioButton x:Name="rbt_EndToEndThroughoutTheProject"
                                 Content="Сквозная по всему проекту"
                                 IsChecked="True"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,0,8"/>
                    <RadioButton x:Name="rbt_SeparatedByLevels"
                                 Content="С разделением по уровням"
                                 VerticalContentAlignment="Center"
                                 Margin="0"/>
                </StackPanel>
            </GroupBox>

            <!-- ОПЦИИ -->
            <GroupBox Header="Опции:" Margin="0,0,0,10">
                <Grid Margin="8,6,8,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox x:Name="checkBox_ConsiderCeilings"
                  Grid.Column="0"
                  Content="Учитывать потолки"
                  VerticalContentAlignment="Center"
                  Margin="0,0,12,0"/>

                    <CheckBox x:Name="checkBox_ConsiderOpenings"
                  Grid.Column="1"
                  Content="Учитывать проемы"
                  VerticalContentAlignment="Center"
                  Margin="0"/>
                </Grid>
            </GroupBox>

            <!-- ДОПОЛНИТЕЛЬНО -->
            <GroupBox Header="Дополнительно:"
                      Margin="0">
                <StackPanel Margin="8,6,8,8">
                    <CheckBox x:Name="checkBox_ConsiderBaseboards"
                              Content="Нумировать плинтус"
                              VerticalContentAlignment="Center"
                              Margin="0"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>

        <!-- ===================== BUTTONS ===================== -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                <Button x:Name="btn_Ok"
                        Content="Ок"
                        Width="100"
                        Height="32"
                        Padding="10,0,10,0"
                        Margin="0,0,5,0"
                        IsDefault="True"
                        Click="btn_Ok_Click"/>
                <Button x:Name="btn_Cancel"
                        Content="Отмена"
                        Width="100"
                        Height="32"
                        Padding="10,0,10,0"
                        Margin="5,0,0,0"
                        IsCancel="True"
                        Style="{StaticResource ButtonOutline}"
                        Click="btn_Cancel_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>