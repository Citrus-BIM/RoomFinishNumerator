<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <!-- ======= Color Tokens (Light) ======= -->
  <!-- Orange / Accent -->
  <Color x:Key="OrPrimaryColor">#FE8841</Color>
  <Color x:Key="OrPrimary600Color">#FF9955</Color>
  <Color x:Key="OrPrimary700Color">#E5732A</Color>
  <Color x:Key="OrBorderColor">#CC6A30</Color>
  <Color x:Key="OrHoverBgColor">#FFF5EB</Color>
  <Color x:Key="OrPressedBgColor">#FFE5D0</Color>

  <!-- Blues (for info/links) -->
  <Color x:Key="InfoColor">#0078D4</Color>
  <Color x:Key="Info700Color">#005A9E</Color>

  <!-- Neutral / Grays -->
  <Color x:Key="Neutral50Color">#FAFAFA</Color>
  <Color x:Key="Neutral100Color">#F5F5F5</Color>
  <Color x:Key="Neutral200Color">#EEEEEE</Color>
  <Color x:Key="Neutral300Color">#E0E0E0</Color>
  <Color x:Key="Neutral350Color">#CFD4DC</Color>
  <Color x:Key="Neutral400Color">#CCCCCC</Color>
  <Color x:Key="Neutral500Color">#999999</Color>
  <Color x:Key="Neutral600Color">#666666</Color>
  <Color x:Key="Neutral700Color">#333333</Color>
  <Color x:Key="Neutral900Color">#111827</Color>

  <!-- Semantic -->
  <Color x:Key="SuccessColor">#16A34A</Color>
  <Color x:Key="WarningColor">#F59E0B</Color>
  <Color x:Key="DangerColor">#DC2626</Color>

  <!-- ======= Brush Tokens ======= -->
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource OrPrimaryColor}"/>
  <SolidColorBrush x:Key="AccentBrushHover" Color="{StaticResource OrPrimary600Color}"/>
  <SolidColorBrush x:Key="AccentBrushPressed" Color="{StaticResource OrPrimary700Color}"/>
  <SolidColorBrush x:Key="AccentBorderBrush" Color="{StaticResource OrBorderColor}"/>
  <SolidColorBrush x:Key="AccentBgHoverBrush" Color="{StaticResource OrHoverBgColor}"/>
  <SolidColorBrush x:Key="AccentBgPressedBrush" Color="{StaticResource OrPressedBgColor}"/>

  <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
  <SolidColorBrush x:Key="Info700Brush" Color="{StaticResource Info700Color}"/>

  <SolidColorBrush x:Key="Neutral50Brush" Color="{StaticResource Neutral50Color}"/>
  <SolidColorBrush x:Key="Neutral100Brush" Color="{StaticResource Neutral100Color}"/>
  <SolidColorBrush x:Key="Neutral200Brush" Color="{StaticResource Neutral200Color}"/>
  <SolidColorBrush x:Key="Neutral300Brush" Color="{StaticResource Neutral300Color}"/>
  <SolidColorBrush x:Key="Neutral350Brush" Color="{StaticResource Neutral350Color}"/>
  <SolidColorBrush x:Key="Neutral400Brush" Color="{StaticResource Neutral400Color}"/>
  <SolidColorBrush x:Key="Neutral500Brush" Color="{StaticResource Neutral500Color}"/>
  <SolidColorBrush x:Key="Neutral600Brush" Color="{StaticResource Neutral600Color}"/>
  <SolidColorBrush x:Key="Neutral700Brush" Color="{StaticResource Neutral700Color}"/>
  <SolidColorBrush x:Key="Neutral900Brush" Color="{StaticResource Neutral900Color}"/>

  <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
  <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
  <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>

  <!-- Text / Borders -->
  <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
  <SolidColorBrush x:Key="SubtleTextBrush" Color="#6B7280"/>
  <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource Neutral500Color}"/>
  <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource Neutral350Color}"/>

  <!-- Surfaces -->
  <SolidColorBrush x:Key="PageBgBrush" Color="White"/>
  <SolidColorBrush x:Key="CardBgBrush" Color="White"/>
  <SolidColorBrush x:Key="AltRowBgBrush" Color="{StaticResource Neutral100Color}"/>

  <!-- ======= Metrics / Tokens ======= -->
  <!-- CornerRadius resources must be of type CornerRadius for CornerRadius properties -->
  <CornerRadius x:Key="CornerRadiusSmall">3</CornerRadius>
  <CornerRadius x:Key="CornerRadiusBase">4</CornerRadius>
  <CornerRadius x:Key="CornerRadiusLarge">8</CornerRadius>

  <!-- For RadiusX/RadiusY numeric usage -->
  <sys:Double x:Key="CornerRadiusSmallValue">3</sys:Double>
  <sys:Double x:Key="CornerRadiusBaseValue">4</sys:Double>
  <sys:Double x:Key="CornerRadiusLargeValue">8</sys:Double>

  <Thickness x:Key="ControlPaddingSmall">8,4</Thickness>
  <Thickness x:Key="ControlPaddingBase">10,6</Thickness>
  <Thickness x:Key="ControlPaddingLarge">12,8</Thickness>

  <Thickness x:Key="ControlBorderThickness">1</Thickness>

  <!-- Focus -->
  <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource OrPrimary700Color}"/>
  <sys:Double x:Key="FocusThickness">2</sys:Double>

  <!-- Fonts -->
  <FontFamily x:Key="BaseFont">Segoe UI, Roboto, Arial</FontFamily>
  <sys:Double x:Key="FontSizeBase">13</sys:Double>
  <sys:Double x:Key="FontSizeSmall">12</sys:Double>
  <sys:Double x:Key="FontSizeLarge">14</sys:Double>

</ResourceDictionary>
